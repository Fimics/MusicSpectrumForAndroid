<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.sss.view.ColumnarView
            android:id="@+id/columnar"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <com.sss.view.WaveformView
            android:id="@+id/waveform"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp" />

        <com.sss.view.AiVoiceView
            android:id="@+id/aiVoice"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
           />

        <com.sss.view.CircleRoundView
            android:id="@+id/circleRoundView"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="10dp"
           />

        <com.sss.view.SpeedometerView
            android:id="@+id/speedometerView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp" />

        <com.sss.view.RotatingCircleView
            android:id="@+id/rotatingCircle"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp" />

        <com.sss.view.GridPointView
            android:id="@+id/gridPointView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="10dp" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>