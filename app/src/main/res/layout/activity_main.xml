<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Switch
            android:id="@+id/switch_slip_ball"
            android:textColor="@color/colorAccent"
            android:text="伸缩球"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.sss.view.SlipBallView
            android:layout_marginTop="10dp"
            android:id="@+id/slipBall"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <Switch
            android:id="@+id/switch_hexagramView"
            android:textColor="@color/colorAccent"
            android:text="六芒星"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.sss.view.HexagramView
            android:layout_marginTop="10dp"
            android:id="@+id/hexagramView"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <Switch
            android:id="@+id/switch_columnar"
            android:textColor="@color/colorAccent"
            android:text="柱状"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.sss.view.ColumnarView
            android:id="@+id/columnar"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <Switch
            android:id="@+id/switch_besselView"
            android:textColor="@color/colorAccent"
            android:text="贝塞尔"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.sss.view.BesselView
            android:id="@+id/besselView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp" />

        <Switch
            android:id="@+id/switch_aiVoice"
            android:textColor="@color/colorAccent"
            android:text="仿AI语音"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.sss.view.AiVoiceView
            android:id="@+id/aiVoice"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
           />


        <Switch
            android:id="@+id/switch_waveform"
            android:textColor="@color/colorAccent"
            android:text="声波"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.sss.view.WaveformView
            android:id="@+id/waveform"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp" />


        <Switch
            android:id="@+id/switch_circleRoundView"
            android:textColor="@color/colorAccent"
            android:text="水波扩散"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.sss.view.CircleRoundView
            android:id="@+id/circleRoundView"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="10dp"
           />

        <Switch
            android:id="@+id/switch_speedometerView"
            android:textColor="@color/colorAccent"
            android:text="里程表"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.sss.view.SpeedometerView
            android:id="@+id/speedometerView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp" />

        <Switch
            android:id="@+id/switch_rotatingCircle"
            android:textColor="@color/colorAccent"
            android:text="旋转头像"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.sss.view.RotatingCircleView
            android:id="@+id/rotatingCircle"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp" />

        <Switch
            android:id="@+id/switch_gridPointView"
            android:textColor="@color/colorAccent"
            android:text="随机棋盘"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.sss.view.GridPointView
            android:id="@+id/gridPointView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="10dp" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>